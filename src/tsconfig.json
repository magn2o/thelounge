{
  "extends": "../tsconfig.base.json",
  "files": [
    "../package.json",
    "../client/js/constants.js",
    "../client/js/helpers/ircmessageparser/findLinks.ts",
    "./index.d.ts"
  ],
  // "exclude": ["../client/*", "./dist/*"],
  "exclude": ["./dist/*"],
  "ts-node": {
    "files": true
  },
  "include": ["./**/*.ts", "./**/*.js", "./**/*.d.ts"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "types": ["node"],
    "baseUrl": ".",
    "noImplicitAny": false,
    "outDir": "dist",
    // "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["./*"],
      "@client/*": ["../client/*"]
    }
  }
}
