{
  "extends": "./tsconfig.base.json",
  "files": ["index.ts", "./src/index.d.ts", "./webpack.config.ts", "./src/helper.ts"],
  "compilerOptions": {
    "types": ["node"],
    "paths": {
      "@src/*": ["src/*"],
      "@client/*": ["client/*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*"],
  "references": [
    {
      "path": "./src"
    },
    {
      "path": "./client"
    }
  ]
}
